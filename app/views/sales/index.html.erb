<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Sales
        </h1>
    </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Sales Person</th>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
      <th>Payment type</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.sale_date %></td>
        <td><%= User.find(sale.user_id).nil? ? "N/A" : User.find(sale.user_id).full_name %></td>
        <td><%= Product.find(sale.product_id).nil? ? "N/A" : Product.find(sale.product_id).name %></td>
        <td>$<%= Product.find(sale.product_id).nil? ? "N/A" : Product.find(sale.product_id).price %></td>
        <td><%= sale.quantity %></td>
        <td>$<%= number_with_precision(sale.total, precision:2) %></td>
        <td><%= sale.payment_type %></td>
         <td>
          <%= link_to sale, class: 'btn btn-default btn-xs' do %>
            <i class="fa fa-search" title="View" aria-hidden="true"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_sale_path(sale), class: 'btn btn-default btn-xs' do %>
            <i class="fa fa-pencil-square-o" title="Edit" aria-hidden="true"></i>
          <% end %>
        </td>
        <td>
          <%= link_to sale, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
          <i class="fa fa-trash-o" title="Delete" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_sale_path, class: 'btn btn-primary' do%>
Add
<% end %>
