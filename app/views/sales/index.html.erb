<h1>Listing sales</h1>

<table class="table">
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th>Tax</th>
      <th>Total</th>
      <th>Payment type</th>
      <th>Sale date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.quantity %></td>
        <td><%= sale.subtotal %></td>
        <td><%= sale.tax %></td>
        <td><%= sale.total %></td>
        <td><%= sale.payment_type %></td>
        <td><%= sale.sale_date %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

