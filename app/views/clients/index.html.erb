<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Clients
        </h1>
    </div>
</div>


<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.phone %></td>
        <td><%= client.city %></td>
        <td><%= client.state %></td>
        <td><%= client.country %></td>
        <td>
          <%= link_to client, class: 'btn btn-default btn-xs' do %>
            <i class="fa fa-search" title="View" aria-hidden="true"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_client_path(client), class: 'btn btn-default btn-xs' do %>
            <i class="fa fa-pencil-square-o" title="Edit" aria-hidden="true"></i>
          <% end %>
        </td>
        <td>
          <%= link_to client, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
          <i class="fa fa-trash-o" title="Delete" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to new_client_path, class: 'btn btn-primary' do%>
Add
<% end %>
