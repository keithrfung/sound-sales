<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Commissions
        </h1>
    </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Product</th>
      <th>Customer</th>
      <th>Sale Total</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.sale_date %></td>
        <td><%= Product.find(sale.product_id).nil? ? "N/A" : Product.find(sale.product_id).name %></td>
        <td><%= Client.find(sale.client_id).nil? ? "N/A" : Client.find(sale.client_id).name %></td>
        <td>$<%= number_with_precision(sale.total, precision:2) %></td>
        <td>$<%= number_with_precision(sale.commission, precision:2) %></td>
        <td><%= sale.payment_type %></td>
      </tr>
    <% end %>
  </tbody>
</table>