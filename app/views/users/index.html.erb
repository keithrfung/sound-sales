<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Username</th>
      <th>Password</th>
      <!-- <th>Password digest</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <!-- <td><%= user.password_digest %></td> -->
        <td>
          <%= link_to user, class: 'btn btn-default btn-xs' do %>
            <i class="fa fa-search" title="View" aria-hidden="true"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_user_path(user), class: 'btn btn-default btn-xs' do %>
            <i class="fa fa-pencil-square-o" title="Edit" aria-hidden="true"></i>
          <% end %>
        </td>
        <td>
          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
          <i class="fa fa-trash-o" title="Delete" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

