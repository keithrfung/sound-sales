<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Commissions
        </h1>
    </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Product</th>
      <th>Customer</th>
      <th>Sale Total</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commissions.each do |commission| %>
      <tr>
        <td>
          <%= Sale.joins(:commissions).where(id: commission.sale_id).pluck(:sale_date).flatten.join('') == nil ? "N/A" : Sale.joins(:commissions).where(id: commission.sale_id).pluck(:sale_date).flatten.join('') %>
        </td>
        <td>
          <%= Product.joins(:commission).where(id: commission.product_id).pluck(:name).flatten.join('') == nil ? "N/A" : Product.joins(:commission).where(id: commission.product_id).pluck(:name).flatten.join('') %>
        </td>
        <td>
          <%= Client.joins(:sales).where(id: commission.sale_id) == nil ? "N/A" : Client.joins(:sales).where(id: commission.sale_id).pluck(:name).flatten.join('') %>
        </td>
        <td>
          <%= Sale.joins(:commissions).where(id: commission.sale_id).pluck(:total).flatten.join('') == nil ? "N/A" : Sale.joins(:commissions).where(id: commission.sale_id).pluck(:total).flatten.join('') %>
        </td>
        <td><%= commission.amount %></td>
        <td>
          <%= link_to commission, class: 'btn btn-default btn-xs' do %>
            <i class="fa fa-search" title="View" aria-hidden="true"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_commission_path(commission), class: 'btn btn-default btn-xs' do %>
            <i class="fa fa-pencil-square-o" title="Edit" aria-hidden="true"></i>
          <% end %>
        </td>
        <td>
          <%= link_to commission, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
          <i class="fa fa-trash-o" title="Delete" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

