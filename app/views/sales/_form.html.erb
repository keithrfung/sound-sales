<%= form_for(@sale, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% @sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   <div class="form-group">
      <%= f.label :product, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
      FIX ME
      </div>
  </div>
 <div class="form-group">
    <%= f.label :price, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
    FIX ME
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.number_field :quantity, :value => (number_with_precision(f.object.subtotal, :precision => 0) || 0), class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :subtotal, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <%= f.number_field :subtotal,:readonly => true, :disabled =>true, :value => (number_with_precision(f.object.subtotal, :precision => 2) || 0),  class: 'text_field form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tax, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div class="input-group">
        <%= f.number_field :tax, :step => 'any', class: 'text_field form-control' %>
        <div class="input-group-addon">%</div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :total, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <%= f.number_field :total, :readonly => true, :disabled =>true, :value => (number_with_precision(f.object.total, :precision => 2) || 0),  class: 'text_field form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :payment_type, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.select :payment_type, options_for_select([["Cash", "Cash"], ["Check", "Check"], 
      ["Credit Card", "Credit Card"]]), {}, {include_blank: 'false', class: 'form-control'} %>
    
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sale_date, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.datetime_select :sale_date, class: 'form-control' %>
    </div>
  </div>
  <div class="actions pull-right">
    <%= f.submit "Save", class: "btn btn-primary"%>
    <%= link_to 'Cancel', sales_path, class: "btn btn-none" %>
  </div>
<% end %>
