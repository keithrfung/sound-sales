<h1>Clients</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Zipcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.phone %></td>
        <td><%= client.address_line_1 %></td>
        <td><%= client.address_line_2 %></td>
        <td><%= client.city %></td>
        <td><%= client.state %></td>
        <td><%= client.country %></td>
        <td><%= client.zipcode %></td>
        <td>
          <%= link_to client, class: 'btn btn-default btn-xs' do %>
            <span class="glyphicon glyphicon-search"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_client_path(client), class: 'btn btn-default btn-xs' do %>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
        </td>
        <td>
          <%= link_to client, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' do %>
          <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to new_client_path, class: 'btn btn-primary' do%>
Add
<% end %>
